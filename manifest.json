{
  "manifest_version": 3,
  "name": "Text to Audio Converter",
  "version": "0.0.1",
  "description": "Convert selected text to audio.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "host_permissions": [
    "https://*/*"
  ]
}
